{
  "manifest_version": 2,
  "name": "NxTec Desktop Streamer",
  "description": "An extension to allow desktop sharing on Collaborate and Tabeeb domains.",
  "version": "0.1.5",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "jitsi-logo-16x16.png",
    "48": "jitsi-logo-48x48.png",
    "128": "jitsi-logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://*.collaborate.center/*",
          "*://*.tabeeb.org/*"
      ]
  }
}
